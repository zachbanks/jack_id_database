<%= simple_form_for @location, :html => { :class => 'form-vertical' } do |f| %>
		<%= f.association :building, :prompt => "Select a Building" %>
		<%= f.input :room %>
		<%= f.input :notes %>
		<%= f.submit submit_button_text(@location, "Location"), :class => submit_button_css(@location) %>
<% end %>