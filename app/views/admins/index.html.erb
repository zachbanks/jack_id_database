<h1>Admins</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
		<th>Actions</th>
    </tr>
  </thead>
  <tbody>
	<% @admins.each do |admin| %>
    <tr>
			<td><%= admin.name %></td>
			<td><%= link_to admin.email, "mailto:#{admin.email}" %></td>
			<td><a href="<%= edit_admin_path(admin) %>"><i class="icon-edit"></i> Edit</a></td>
    </tr>
	<% end %>
  </tbody>
</table>
<%=  paginate @admins %>
<%= button_to "New Admin", new_admin_path, :method => :get, :class => 'btn' %>