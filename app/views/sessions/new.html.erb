<h1>Admin Login</h1>
<%= form_tag sessions_path do %>
	<div class="field">
		<%= label_tag :username %>
		<%= text_field_tag :username, params[:username] %>
	</div>
	
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password%>
	</div>
	<div class="field">
		<%= label_tag :remember_me %>
		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
	</div>
	<div class="actions">
		<%= submit_tag "Login", :class => 'btn' %>
	</div>

<% end %>
